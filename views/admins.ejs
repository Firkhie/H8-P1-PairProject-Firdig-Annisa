<!DOCTYPE html>
<html lang="en">
<head>
   <meta charset="UTF-8">
   <meta http-equiv="X-UA-Compatible" content="IE=edge">
   <meta name="viewport" content="width=device-width, initial-scale=1.0">
   <title>Home</title>
   <link rel="stylesheet" href="admins.css">
</head>
<body style="position: relative; margin-top: 40px;">
   <a href="/logout" style="position: absolute; right: 20px;"><button>Logout</button></a>
   <h1>Home</h1>
   <a href="/admins/add" style="margin-left: 150px; padding-right: 30px;"><button>Add New Investment</button></a>
   <table border="1">
      <thead>
         <tr>
            <th>No</th>
            <th>Investment Name</th>
            <th>Investment Type</th>
            <th>ROI</th>
            <th>Action</th>
         </tr>
      </thead>
      <tbody>
         <% investments.forEach((el, index) => { %>
            <tr>
               <td><%= ++index %></td>
               <td><%= el.investmentName %></td>
               <td><%= el.investmentType %></td>
               <td><%= el.roiPercentage %></td>
               <td>
                  <a href="/admins/investment/<%= el.id %>/edit"><button>Edit</button></a>
                  <a href="/admins/investment/<%= el.id %>/delete"><button>Delete</button></a>
               </td>
            </tr>
         <% }) %>
      </tbody>
   </table>
</body>
</html>