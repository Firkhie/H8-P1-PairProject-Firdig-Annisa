<!DOCTYPE html>
<html lang="en">
<head>
   <meta charset="UTF-8">
   <meta http-equiv="X-UA-Compatible" content="IE=edge">
   <meta name="viewport" content="width=device-width, initial-scale=1.0">
   <title>Edit Investment</title>
</head>
<body>
   <h1>Edit Investment</h1>
   <form action="/admins/investment/<%= InvestmentId %>/edit" method="post">
      <p>
         <label>Investment Name</label>
         <input type="text" name="investmentName" value="<%= invest.investmentName %>">
      </p>
      <p>
         <label>Company Name</label>
         <select name="CompanyId">
            <% companies.forEach(el => { %>
               <option value="<%= el.id %>" <%= el.id == invest.CompanyId ? 'selected' : '' %>><%= el.companyName %></option>
            <% }) %>
         </select>
      </p>
      <p>
         <label>Investment Type</label>
         <select name="investmentType">
            <% const types = [ 'Saham', 'Campuran', 'Obligasi' ] %>
            <% types.forEach(el => { %>
               <option value="<%= el %>" <%= el == invest.investmentType ? 'selected' : '' %>><%= el %></option>
            <% }) %>
         </select>
      </p>
      <p>
         <label>Return Of Investment</label>
         <input type="number" name="returnOnInvestment" value="<%= invest.returnOnInvestment %>">
      </p>
      <p>
         <input type="submit" value="Submit">
      </p
   </form>
</body>
</html>